<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- Color de la sombra -->
            <corners android:radius="12dp"/> <!-- Radio de los bordes redondeados -->
        </shape>
    </item>

    <!-- Fondo de la tarjeta -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Color de fondo de la tarjeta -->
            <corners android:radius="12dp"/> <!-- Radio de los bordes redondeados -->
        </shape>
    </item>

</layer-list>
